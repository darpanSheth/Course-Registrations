@model CourseRegistration.DTO.CourseDTO

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Instructor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CourseId)

        <div>
            @Html.LabelFor(model => model.CourseName)
            <div>
                @Html.EditorFor(model => model.CourseName)
                @Html.ValidationMessageFor(model => model.CourseName)
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.CourseNumber)
            <div>
                @Html.EditorFor(model => model.CourseNumber)
                @Html.ValidationMessageFor(model => model.CourseNumber)
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Description)
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        
        <br />
        <div>
            <div>
                <input type="submit" value="Save">
            </div>
        </div>
    </div>
}
