@model CourseRegistration.Models.StudentsViewModel;

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th>Edit or Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <th scope="row">@item.StudentId</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.EmailAddress</td>
                <td>@item.PhoneNumber</td>
                <td><a href="/api/General/GetStudentToEdit/@item.StudentId">Edit</a> | <a href="/api/General/GetStudentToDelete/@item.StudentId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<br />
<a asp-action="CreateStudent" asp-controller="General">Click here to register a new Student</a>
