

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Instructor Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Course Id</th>
            <th>Edit or Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Instructors)
        {
            <tr>
                <th scope="row">@item.InstructorId</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.EmailAddress</td>
                <td>@item.CourseId</td>
                <td><a href="/api/General/GetInstructorToEdit/@item.InstructorId">Edit</a> | <a href="/api/General/GetInstructorToDelete/@item.InstructorId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-action="CreateInstructor" asp-controller="General">Click here to register a new Instructor</a>